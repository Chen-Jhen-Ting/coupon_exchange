<% if @coupon .errors.any? %>
  <ul>
  <% @coupon .errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@coupon ,url: coupon_path ) do |f| %>
  <div >
    <%= f.label :name, "姓名" %>
    <%= f.text_field :name %>
  </div>

  <div >
    <%= f.label :twid, "身分證字號" %>
    <%= f.text_field :twid %>
  </div>

  <div >
    <%= f.label :phone, "手機號碼" %>
    <%= f.text_field :phone %>
  </div>

  <%= f.submit "送出" %>
<% end %>
